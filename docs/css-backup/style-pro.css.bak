
/* ===================================
   QURANREVIEW PRO - ULTRA MODERN UI
   Glassmorphism + GSAP + Premium Effects
   =================================== */

/* ===================================
   1. CSS VARIABLES & THEME
   =================================== */
:root {
    /* Primary Colors */
    --color-primary: #1f6f45;
    --color-primary-light: #2f8f5d;
    --color-primary-dark: #154d31;
    
    /* Accent Colors */
    --color-gold: #b98532;
    --color-gold-light: #d4ad67;
    --color-cream: #efe3cc;
    
    /* Semantic Colors */
    --color-success: #1f9a5c;
    --color-warning: #c98917;
    --color-danger: #b83d3d;
    --color-info: #2f76b7;
    
    /* Neutral */
    --color-white: #ffffff;
    --color-black: #0a0a0a;
    --color-gray-50: #fafafa;
    --color-gray-100: #f5f5f5;
    --color-gray-200: #e5e5e5;
    --color-gray-300: #d4d4d4;
    --color-gray-400: #a3a3a3;
    --color-gray-500: #737373;
    --color-gray-600: #525252;
    --color-gray-700: #404040;
    --color-gray-800: #262626;
    --color-gray-900: #171717;
    
    /* Spacing */
    --space-1: 0.25rem;
    --space-2: 0.5rem;
    --space-3: 0.75rem;
    --space-4: 1rem;
    --space-5: 1.25rem;
    --space-6: 1.5rem;
    --space-8: 2rem;
    --space-10: 2.5rem;
    --space-12: 3rem;
    --space-16: 4rem;
    
    /* Typography */
    --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --font-arabic: 'Amiri', 'Noto Naskh Arabic', 'Traditional Arabic', serif;
    
    /* Border Radius */
    --radius-sm: 0.375rem;
    --radius-md: 0.5rem;
    --radius-lg: 0.75rem;
    --radius-xl: 1rem;
    --radius-2xl: 1.25rem;
    --radius-3xl: 1.5rem;
    --radius-full: 9999px;
    
    /* Shadows */
    --shadow-sm: 0 1px 2px rgba(0,0,0,0.05);
    --shadow-md: 0 4px 6px -1px rgba(0,0,0,0.1);
    --shadow-lg: 0 10px 15px -3px rgba(0,0,0,0.1);
    --shadow-xl: 0 20px 25px -5px rgba(0,0,0,0.1);
    --shadow-glow: 0 0 24px rgba(31, 111, 69, 0.4);
    --shadow-glow-gold: 0 0 24px rgba(185, 133, 50, 0.45);
    
    /* Transitions */
    --transition-fast: 150ms ease;
    --transition-base: 300ms ease;
    --transition-slow: 500ms ease;
    
    /* Glass Effects */
    --glass-bg: rgba(226, 235, 224, 0.9);
    --glass-border: rgba(198, 213, 201, 0.72);
    --glass-blur: blur(20px);
}

/* Dark Theme */
[data-theme="dark"] {
    --color-primary: #5fbb89;
    --color-primary-light: #89d6aa;
    --color-primary-dark: #3b8f62;
    
    --color-cream: #181a19;
    
    --glass-bg: rgba(30, 30, 30, 0.7);
    --glass-border: rgba(255, 255, 255, 0.1);
    
    --color-text-primary: #f5f5f5;
    --color-text-secondary: #bfc8c2;
    --color-bg-primary: #0d120f;
    --color-bg-secondary: #131a16;
    --color-border: #2f3a33;
}

/* Light Theme (default) */
:root {
    --color-text-primary: #132018;
    --color-text-secondary: #43594b;
    --color-bg-primary: #dfe8dd;
    --color-bg-secondary: #d3dfd2;
    --color-border: #b6c7b8;
}

/* ===================================
   2. RESET & BASE
   =================================== */
*, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html {
    scroll-behavior: smooth;
}

body {
    font-family: var(--font-sans);
    background: var(--color-bg-primary);
    color: var(--color-text-primary);
    line-height: 1.6;
    overflow-x: hidden;
}

/* Arabic Text */
.arabic {
    font-family: var(--font-arabic);
    direction: rtl;
}

.arabic-large {
    font-family: var(--font-arabic);
    font-size: 1.75rem;
    line-height: 2;
    color: var(--color-primary);
}

/* ===================================
   3. AURORA BACKGROUND
   =================================== */
.aurora-bg {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
        radial-gradient(ellipse at 20% 20%, rgba(45, 80, 22, 0.15) 0%, transparent 50%),
        radial-gradient(ellipse at 80% 80%, rgba(212, 165, 116, 0.1) 0%, transparent 50%),
        radial-gradient(ellipse at 50% 50%, rgba(45, 80, 22, 0.05) 0%, transparent 70%);
    z-index: -2;
    animation: aurora 20s ease-in-out infinite;
}

@keyframes aurora {
    0%, 100% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(30px, -30px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
}

/* ===================================
   4. PARTICLES
   =================================== */
.particles-container {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: -1;
    overflow: hidden;
}

.particle {
    position: absolute;
    background: rgba(212, 165, 116, 0.3);
    border-radius: 50%;
    animation: float-up linear infinite;
}

@keyframes float-up {
    0% {
        transform: translateY(100vh) rotate(0deg);
        opacity: 0;
    }
    10% { opacity: 1; }
    90% { opacity: 1; }
    100% {
        transform: translateY(-100px) rotate(360deg);
        opacity: 0;
    }
}

/* ===================================
   5. LOADING SCREEN
   =================================== */
.loading-screen {
    position: fixed;
    inset: 0;
    background: var(--color-bg-primary);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 99999;
    gap: var(--space-6);
}

.loading-screen.hidden {
    display: none !important;
}

.loading-spinner {
    width: 60px;
    height: 60px;
    border: 3px solid var(--color-border);
    border-top-color: var(--color-primary);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

.loading-bar {
    width: 200px;
    height: 4px;
    background: var(--color-border);
    border-radius: var(--radius-full);
    overflow: hidden;
}

.loading-progress {
    height: 100%;
    background: linear-gradient(90deg, var(--color-primary), var(--color-gold));
    width: 0%;
    transition: width 0.3s ease;
}

/* ===================================
   6. HEADER
   =================================== */
.header-glass {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: var(--glass-bg);
    backdrop-filter: var(--glass-blur);
    border-bottom: 1px solid var(--glass-border);
    transition: all var(--transition-base);
}

.header-scrolled {
    box-shadow: var(--shadow-lg);
}

.nav-link-pro {
    position: relative;
    padding: var(--space-2) var(--space-4);
    color: var(--color-text-secondary);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9375rem;
    transition: all var(--transition-fast);
    border-radius: var(--radius-lg);
}

.nav-link-pro:hover {
    color: var(--color-primary);
    background: rgba(45, 80, 22, 0.08);
}

.nav-link-pro.active {
    color: var(--color-primary);
    background: rgba(45, 80, 22, 0.12);
}

/* ===================================
   7. LAYOUT
   =================================== */
.main {
    min-height: 100vh;
    padding-top: 80px;
}

.section-pro {
    padding: var(--space-16) 0;
}

.container-pro {
    width: 100%;
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 var(--space-6);
}

/* Grid System */
.grid-pro {
    display: grid;
    gap: var(--space-6);
}

.grid-cols-2 { grid-template-columns: repeat(2, 1fr); }
.grid-cols-3 { grid-template-columns: repeat(3, 1fr); }
.grid-cols-4 { grid-template-columns: repeat(4, 1fr); }
.grid-cols-5 { grid-template-columns: repeat(5, 1fr); }
.grid-cols-7 { grid-template-columns: repeat(7, 1fr); }

.flex-pro {
    display: flex;
    align-items: center;
}

/* ===================================
   8. CARDS
   =================================== */
.card-glass-pro {
    background: var(--glass-bg);
    backdrop-filter: var(--glass-blur);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-2xl);
    padding: var(--space-6);
    transition: all var(--transition-base);
}

.card-glass-pro:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
}

.card-gradient-border {
    position: relative;
    background: linear-gradient(135deg, var(--color-gold), var(--color-primary));
    padding: 2px;
    border-radius: var(--radius-2xl);
}

.card-gradient-border-inner {
    background: var(--color-bg-primary);
    border-radius: calc(var(--radius-2xl) - 2px);
}

.card-stat-premium {
    background: linear-gradient(135deg, rgba(45, 80, 22, 0.05), rgba(212, 165, 116, 0.05));
    border: 1px solid rgba(45, 80, 22, 0.1);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    transition: all var(--transition-base);
}

.card-stat-premium:hover {
    border-color: var(--color-gold);
    box-shadow: var(--shadow-glow-gold);
}

/* ===================================
   9. BUTTONS
   =================================== */
.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-6);
    font-size: 0.9375rem;
    font-weight: 600;
    border-radius: var(--radius-lg);
    border: none;
    cursor: pointer;
    transition: all var(--transition-fast);
    white-space: nowrap;
}

.btn-sm {
    padding: var(--space-2) var(--space-4);
    font-size: 0.875rem;
}

.btn-glow {
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-light));
    color: white;
    box-shadow: 0 4px 14px rgba(45, 80, 22, 0.4);
}

.btn-glow:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-glow);
}

.btn-gradient {
    background: linear-gradient(135deg, var(--color-gold), #e8b86d);
    color: white;
    box-shadow: 0 4px 14px rgba(212, 165, 116, 0.4);
}

.btn-outline-glow {
    background: transparent;
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
}

.btn-outline-glow:hover {
    background: rgba(45, 80, 22, 0.1);
}

.btn-full {
    width: 100%;
}

/* Button Loading State */
.btn-loading {
    position: relative;
    color: transparent !important;
    pointer-events: none;
}

.btn-loading::after {
    content: '';
    position: absolute;
    width: 20px;
    height: 20px;
    border: 2px solid transparent;
    border-top-color: currentColor;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

/* ===================================
   10. MODAL
   =================================== */
.modal-overlay-pro {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: all var(--transition-base);
}

.modal-overlay-pro.active {
    opacity: 1;
    visibility: visible;
}

.modal-content-pro {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(30px);
    border-radius: var(--radius-3xl);
    border: 1px solid rgba(255, 255, 255, 0.4);
    padding: var(--space-8);
    max-width: 480px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
    transform: scale(0.95);
    transition: transform var(--transition-base);
}

.modal-overlay-pro.active .modal-content-pro {
    transform: scale(1);
}

[data-theme="dark"] .modal-content-pro {
    background: rgba(30, 30, 30, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

/* Auth Forms */
#auth-login-form,
#auth-register-form {
    display: none;
}

#auth-login-form.active,
#auth-register-form.active {
    display: block;
}

/* ===================================
   11. BADGES
   =================================== */
.badge {
    display: inline-flex;
    align-items: center;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 600;
}

.badge-primary {
    background: rgba(45, 80, 22, 0.1);
    color: var(--color-primary);
}

.badge-gold {
    background: rgba(212, 165, 116, 0.15);
    color: #b8956a;
}

.badge-glass {
    background: var(--glass-bg);
    backdrop-filter: var(--glass-blur);
    border: 1px solid var(--glass-border);
}

.badge-warning {
    background: linear-gradient(135deg, #f59e0b, #d97706);
    color: white;
    animation: pulse-warning 2s infinite;
}

@keyframes pulse-warning {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.8; }
}

/* ===================================
   12. FORMS
   =================================== */
.form-floating {
    position: relative;
}

.form-floating input,
.form-floating select,
.form-floating textarea {
    width: 100%;
    padding: var(--space-3) var(--space-4);
    font-size: 0.9375rem;
    border: 2px solid var(--color-border);
    border-radius: var(--radius-lg);
    background: var(--color-bg-primary);
    color: var(--color-text-primary);
    transition: all var(--transition-fast);
}

.form-floating input:focus,
.form-floating select:focus,
.form-floating textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(45, 80, 22, 0.1);
}

.form-floating label {
    position: absolute;
    right: var(--space-4);
    top: 50%;
    transform: translateY(-50%);
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    pointer-events: none;
    transition: all var(--transition-fast);
    background: var(--color-bg-primary);
    padding: 0 var(--space-1);
}

.form-floating input:focus ~ label,
.form-floating input:not(:placeholder-shown) ~ label,
.form-floating select:focus ~ label,
.form-floating select:not(:placeholder-shown) ~ label,
.form-floating textarea:focus ~ label,
.form-floating textarea:not(:placeholder-shown) ~ label {
    top: 0;
    font-size: 0.75rem;
    color: var(--color-primary);
}

.form-floating textarea ~ label {
    top: var(--space-3);
    transform: none;
}

.form-floating textarea:focus ~ label,
.form-floating textarea:not(:placeholder-shown) ~ label {
    top: 0;
    transform: translateY(-50%);
}

/* Toggle Switch */
.toggle-switch {
    display: flex;
    align-items: center;
    cursor: pointer;
}

.toggle-switch input {
    display: none;
}

.toggle-slider {
    width: 48px;
    height: 24px;
    background: var(--color-border);
    border-radius: var(--radius-full);
    position: relative;
    transition: all var(--transition-fast);
}

.toggle-slider::after {
    content: '';
    position: absolute;
    width: 20px;
    height: 20px;
    background: white;
    border-radius: 50%;
    top: 2px;
    right: 2px;
    transition: all var(--transition-fast);
}

.toggle-switch input:checked ~ .toggle-slider {
    background: var(--color-primary);
}

.toggle-switch input:checked ~ .toggle-slider::after {
    right: 26px;
}

/* ===================================
   13. TABLES
   =================================== */
.table-responsive {
    overflow-x: auto;
}

.memorization-table {
    width: 100%;
    border-collapse: collapse;
}

.memorization-table th,
.memorization-table td {
    padding: var(--space-4);
    text-align: right;
    border-bottom: 1px solid var(--color-border);
}

.memorization-table th {
    font-weight: 600;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.memorization-item {
    display: flex;
    align-items: center;
    padding: var(--space-4);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-3);
    background: var(--color-bg-primary);
    transition: all var(--transition-fast);
}

.memorization-item:hover {
    border-color: var(--color-gold);
    box-shadow: var(--shadow-sm);
}

/* ===================================
   14. PLAYER
   =================================== */
.player-glass {
    background: linear-gradient(135deg, rgba(45, 80, 22, 0.1), rgba(212, 165, 116, 0.1));
    border: 1px solid rgba(45, 80, 22, 0.2);
    border-radius: var(--radius-2xl);
    padding: var(--space-8);
    backdrop-filter: var(--glass-blur);
}

.player-controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
    margin-top: var(--space-6);
}

.player-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    border: none;
    cursor: pointer;
    transition: all var(--transition-fast);
}

.player-btn-lg {
    width: 64px;
    height: 64px;
    font-size: 1.5rem;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-light));
    color: white;
    box-shadow: var(--shadow-glow);
}

.player-btn-lg:hover {
    transform: scale(1.1);
}

.player-btn-secondary {
    width: 48px;
    height: 48px;
    font-size: 1.25rem;
    background: var(--glass-bg);
    backdrop-filter: var(--glass-blur);
    border: 1px solid var(--glass-border);
}

.player-btn-secondary:hover {
    background: rgba(45, 80, 22, 0.1);
}

.progress-glass {
    height: 8px;
    background: rgba(0, 0, 0, 0.1);
    border-radius: var(--radius-full);
    overflow: hidden;
}

.progress-glass .fill {
    height: 100%;
    background: linear-gradient(90deg, var(--color-primary), var(--color-gold));
    border-radius: var(--radius-full);
    transition: width 0.5s ease;
}

/* ===================================
   15. TYPOGRAPHY
   =================================== */
.hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: var(--space-4);
}

.hero-subtitle {
    font-size: clamp(1.125rem, 2vw, 1.375rem);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto var(--space-8);
}

.section-title {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    margin-bottom: var(--space-6);
}

.gradient-text {
    background: linear-gradient(135deg, var(--color-primary), var(--color-gold));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.stat-value {
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, var(--color-primary), var(--color-gold));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

/* ===================================
   16. ANIMATIONS
   =================================== */
.animate-fade-in-up {
    animation: fadeInUp 0.8s ease forwards;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.hover-lift {
    transition: transform var(--transition-base), box-shadow var(--transition-base);
}

.hover-lift:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
}

.shimmer {
    position: relative;
    overflow: hidden;
}

.shimmer::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    animation: shimmer 3s infinite;
}

@keyframes shimmer {
    100% { left: 100%; }
}

/* ===================================
   17. STATUS BADGES
   =================================== */
.status-badge {
    display: inline-block;
    width: 12px;
    height: 12px;
    border-radius: 50%;
}

.status-strong {
    background: var(--color-success);
    box-shadow: 0 0 8px rgba(16, 185, 129, 0.4);
}

.status-weak {
    background: var(--color-warning);
    box-shadow: 0 0 8px rgba(245, 158, 11, 0.4);
}

.status-new {
    background: var(--color-info);
    box-shadow: 0 0 8px rgba(59, 130, 246, 0.4);
}

/* ===================================
   18. TASKS
   =================================== */
.task-card {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-4);
    border-bottom: 1px solid var(--color-border);
    transition: background var(--transition-fast);
}

.task-card:last-child {
    border-bottom: none;
}

.task-card:hover {
    background: rgba(45, 80, 22, 0.03);
}

.task-status {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    flex-shrink: 0;
}

.task-status-pending {
    background: var(--color-warning);
}

.task-status-completed {
    background: var(--color-success);
}

.task-status-submitted {
    background: var(--color-info);
}

/* ===================================
   19. TABS
   =================================== */
.tabs {
    display: flex;
    gap: var(--space-2);
    margin-bottom: var(--space-6);
    border-bottom: 2px solid var(--color-border);
}

.tab {
    padding: var(--space-3) var(--space-6);
    background: none;
    border: none;
    border-bottom: 2px solid transparent;
    margin-bottom: -2px;
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-text-secondary);
    cursor: pointer;
    transition: all var(--transition-fast);
}

.tab:hover {
    color: var(--color-primary);
}

.tab.active {
    color: var(--color-primary);
    border-bottom-color: var(--color-primary);
}

/* ===================================
   20. RESPONSIVE
   =================================== */
@media (max-width: 1024px) {
    .grid-cols-4 { grid-template-columns: repeat(2, 1fr); }
    .grid-cols-5 { grid-template-columns: repeat(3, 1fr); }
}

@media (max-width: 768px) {
    .container-pro {
        padding: 0 var(--space-4);
    }
    
    .grid-cols-2,
    .grid-cols-3,
    .grid-cols-4,
    .grid-cols-5,
    .grid-cols-7 {
        grid-template-columns: 1fr;
    }
    
    .section-pro {
        padding: var(--space-10) 0;
    }
    
    .nav-link-pro {
        padding: var(--space-2);
        font-size: 0.875rem;
    }
    
    .hide-mobile {
        display: none;
    }
}

/* ===================================
   21. PAGES
   =================================== */
.page {
    display: none;
    min-height: 100vh;
}

.page.active {
    display: block !important;
    animation: fadeIn 0.5s ease;
}

/* Force display for competition and hifz pages */
#competition-page.active,
#hifz-page.active {
    display: block !important;
}

#competition-page.active #competition-dashboard,
#hifz-page.active #hifz-selection {
    display: block !important;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

/* ===================================
   22. UTILITIES
   =================================== */
.hidden {
    display: none !important;
}

.reveal {
    opacity: 1;
}

.text-center {
    text-align: center;
}

/* Stagger children animation */
.stagger-children > * {
    opacity: 0;
    animation: fadeInUp 0.6s ease forwards;
}

.stagger-children > *:nth-child(1) { animation-delay: 0.1s; }
.stagger-children > *:nth-child(2) { animation-delay: 0.2s; }
.stagger-children > *:nth-child(3) { animation-delay: 0.3s; }
.stagger-children > *:nth-child(4) { animation-delay: 0.4s; }
.stagger-children > *:nth-child(5) { animation-delay: 0.5s; }
.stagger-children > *:nth-child(6) { animation-delay: 0.6s; }

/* Feature Icons */
.feature-icon-pro {
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, rgba(45, 80, 22, 0.1), rgba(212, 165, 116, 0.1));
    border-radius: var(--radius-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    margin: 0 auto var(--space-4);
}

/* Motivation Text */
.motivation-text {
    font-size: 1.75rem;
    line-height: 1.8;
    font-style: italic;
}

/* Screen Reader Only */
.sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
}

/* ===================================
   23. HIFZ GAME DISPLAY
   =================================== */
#hifz-display {
    min-height: 150px;
    padding: var(--space-4);
}

.ayah-line {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-2);
    direction: rtl;
    font-family: var(--font-arabic);
    font-size: 1.75rem;
    line-height: 2.5;
}

.ayah-line .word {
    display: inline-block;
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-md);
    cursor: default;
    transition: all var(--transition-fast);
}

.ayah-line .word.revealed {
    color: var(--color-primary);
}

.ayah-line .word.hidden {
    color: var(--color-text-secondary);
    background: rgba(45, 80, 22, 0.08);
    cursor: pointer;
    min-width: 60px;
    text-align: center;
    border-bottom: 2px dashed var(--color-gold);
}

.ayah-line .word.hidden:hover {
    background: rgba(45, 80, 22, 0.15);
}

/* Hifz Feedback */
#hifz-feedback {
    padding: var(--space-4);
    border-radius: var(--radius-lg);
    text-align: center;
    font-weight: 600;
}

#hifz-feedback.success {
    background: rgba(16, 185, 129, 0.1);
    color: var(--color-success);
}

#hifz-feedback.error {
    background: rgba(239, 68, 68, 0.1);
    color: var(--color-danger);
}

/* ===================================
   24. COMPETITION PAGE FIXES
   =================================== */
#competition-dashboard {
    display: block;
}

#competition-dashboard.hidden {
    display: none !important;
}

#competition-active {
    display: none;
}

#competition-active:not(.hidden) {
    display: block !important;
}

#game-area {
    background: rgba(45, 80, 22, 0.03);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
}

/* ===================================
   25. HIFZ PAGE FIXES
   =================================== */
#hifz-selection {
    display: block;
}

#hifz-selection.hidden {
    display: none !important;
}

#hifz-active-container {
    display: none;
}

#hifz-active-container:not(.hidden) {
    display: block !important;
}

/* Ensure proper RTL layout */
.ayah-line {
    direction: rtl;
    text-align: center;
}
